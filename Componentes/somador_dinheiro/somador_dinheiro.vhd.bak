library ieee;
use ieee.std_logic_1164.all;
use ieee.std_logic_unsigned.all;

entity somador_dinheiro is
port (    entrada1    : in std_logic_vector(3 downto 0);
        entrada2      : in std_logic_vector(6 downto 0);
        dinheiro_guardado         : out std_logic_vector(6 downto 0));
end somador_dinheiro;

architecture comportamental of somador_dinheiro is
begin
        dinheiro_guardado  <= entrada1 + entrada2 ;
end comportamental;